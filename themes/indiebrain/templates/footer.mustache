    <div>{{! footer}}
      {{#show-meta}}
      <div class="post-meta">
        <div class="post-publication-info">
          <span title="post date" class="post-info">{{{date}}}</span>
          <span title="author" class="post-info">{{author}}</span>
        </div>
        <div class="post-tags">
          <span title="tags" class="post-info">{{{tag-links}}}</span>
        </div>
      </div>
      {{/show-meta}}
      <script src="//code.jquery.com/jquery-latest.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/prettify/r298/prettify.js"></script>
      <script src="/media/js/main.js"></script>
      <div class="footer">
        <p>
          Copyright &copy; 2012 - <span id="footerYear"></span> {{author}}
          <script type="text/javascript">document.getElementById("footerYear").innerHTML = (new Date()).getFullYear();</script>
        </p>
      </div>
    </div>
